<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite parallel="tests" name="All Test Suite">
    <groups>
        <run>
            <include name="ErrorHandling"/>
        </run>
    </groups>
    <test thread-count="5" verbose="2" preserve-order="true" name="Error Validations Test">
        <classes>
            <class name="Promod_Framework.tests.ErrorValidationsTest">
            <methods>
                <include name="loginErrorValidation"/>
                <include name="productErrorValidation"/>
            </methods></class>
        </classes></test>
    <test name="Stand Alone Test">
        <classes>
            <class name="Promod_Framework.tests.StandAloneTestPOM2">
                <methods>
                    <include name="submitOrderTest"/>
                </methods></class></classes></test></suite>